{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Docker Container",
            "type": "shell",
            "command": "docker compose up -d",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Stop Docker Container",
            "type": "shell",
            "command": "docker compose down",
            "problemMatcher": []
        },
        {
            "label": "Full build in Docker",
            "type": "shell",
            "command": "docker compose exec dev bash -c './autogen.sh && ./configure && make'",
            "problemMatcher": "$gcc",
            "group": "build",
            "dependsOn": [
                "Start Docker Container"
            ]
        },
        {
            "label": "Build in Docker",
            "type": "shell",
            "command": "docker compose exec dev make",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Start Docker Container"
            ]
        },
        {
            "label": "Clean in Docker",
            "type": "shell",
            "command": "docker compose exec dev make clean",
            "problemMatcher": [],
            "dependsOn": [
                "Start Docker Container"
            ]
        },
    ]
